<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="OnboardingButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryWhiteColor</item>
        <item name="android:layout_marginStart">@dimen/onboarding_margin_horizontal_vertical</item>
        <item name="android:layout_marginEnd">@dimen/onboarding_margin_horizontal_vertical</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/onboarding_button</item>
        <item name="drawableTint">@color/primaryColorLight</item>
        <item name="android:drawableEnd">@drawable/chevron_right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="QuizButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColorDark</item>
        <item name="android:layout_marginStart">@dimen/onboarding_margin_horizontal_vertical</item>
        <item name="android:layout_marginEnd">@dimen/onboarding_margin_horizontal_vertical</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/onboarding_button</item>
        <item name="drawableTint">@color/primaryColorLight</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="whiteButtonLogin" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/primaryWhiteColor</item>
        <item name="strokeColor">@color/primaryColorLight</item>
    </style>

    <style name="boldPoppins" parent="">
        <item name="fontFamily">@font/poppinsbold</item>
    </style>

    <style name="mediumPoppins" parent="">
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>


</resources>
